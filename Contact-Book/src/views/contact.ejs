<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contact</h1>
      <p class="text-center lead">Create or edit your contact below</p>

      <%- include('includes/messages') %>

      <form action="/contact/register" method="POST">
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        
        <div class="form-group">
          <label class="my-2">Name</label>
          <input value="<%= contact.name %>" type="text" class="form-control" name="name">
        </div>

        <div class="form-group">
          <label class="my-2">Surname</label>
          <input value="<%= contact.surname %>" type="text" class="form-control" name="surname">
        </div>
        <div class="form-group">
          <label class="my-2">E-mail</label>
          <input value="<%= contact.email %>" type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label class="my-2">Telephone</label>
          <input value="<%= contact.telephone %>" type="tel" class="form-control" name="telephone">
        </div>

        <button type="submit" class="btn btn-primary my-3">Save</button>
      </form>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
