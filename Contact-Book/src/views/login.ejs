<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Create Account or Login</h1>
      <p class="text-center lead">Login or create your account below</p>

      <%- include('includes/messages'); %>

      <div class="row">
        <div class="col-lg my-1">
          <h4>Make you registration</h4>
          <p>If you dont't have account, fill form below</p>

          <form class="form-registration" action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            
            <div class="form-group">
              <label class="my-2">Your Email address</label>
              <input type="email" class="form-control" id="email-register" name="email">
            </div>

            <div class="form-group">
              <label class="my-2">Your Password</label>
              <input type="password" class="form-control" id="password-register" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Create Account</button>
          </form>
        </div>

        <div class="col-lg my-1">
          <h4>Login</h4>
          <p>If you have account, make login below</p>

          <form class="form-login" action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

            <div class="form-group">
              <label class="my-2">Your Email address</label>
              <input type="email" class="form-control" id="email-login" name="email">
            </div>

            <div class="form-group">
              <label class="my-2">Your Password</label>
              <input type="password" class="form-control" id="password-login" name="password">
            </div>
            <button type="submit" class="btn btn-primary my-3">Login</button>
          </form>
          
        </div>
      </div>


    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
